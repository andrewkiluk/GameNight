h1 {
  font-size: 24px;
}
h2 {
  font-size: 13px;
  font-weight: 700;
}

#navbar-login{
  margin-top: 8px;
}

#main-content {
  margin-bottom: 30px;
}

.center-text {
  text-align: center;
}

.inline {
  display: inline;
}

.margin-top {
  margin-top: 20px;
}

.table-header div{
  font-weight: bold;
  margin: 20px 0px 10px 0px;
}
.table-body .table-row {
  padding: 5px 0px;
}
.table-body .table-row:nth-child(odd) {
  background: white;
}
.table-body .table-row:nth-child(even) {
  background: #eee;
}
hr {
  border-top: 1px solid #CCC;
}

.login-form, .account-input {
    box-sizing: border-box;
    -moz-box-sizing: border-box;
    -webkit-box-sizing: border-box;
}
.account-label, .account-input {
    display: inline-block;
    vertical-align: baseline;
    width: 125px;
}
.account-label{
    text-align: right;
    margin-right: 5px;
}
.account-input {
  display: inline;
  width: 200px;
  margin: 10px 0px;
}
.account-button {
  margin-top: 8px;
}

.well.selected {
  border: 1px solid #337AB7;
}
.friend-select p{
  cursor:default;
  -webkit-touch-callout: none;
  -webkit-user-select: none;
  -khtml-user-select: none;
  -moz-user-select: none;
  -ms-user-select: none;
  user-select: none;
}