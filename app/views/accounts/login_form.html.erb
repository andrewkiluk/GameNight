<div class="col-md-6 col-md-offset-3 center-text">
  <form id="login_form" class="account_form" method="POST" action="/login">
    <h1>Log In </h1>
    <br/>
    <%= label_tag(:email, "Email Address: ") %>
    <%= text_field_tag(:email) %>
    <br/>
    <%= label_tag(:password, "Password: ") %>
    <%= password_field_tag(:password) %>
    <br/>
    <button class="btn" id="login_button" type="submit">Log In</button>
    <%= hidden_field_tag :redirect_path, flash[:redirect_path]%>
    <%= token_tag form_authenticity_token %>
  </form>
</div>